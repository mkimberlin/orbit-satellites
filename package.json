{
  "name": "orbit-satellites",
  "version": "0.1.0",
  "private": true,
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/coverage/**",
      "!src/index.js",
      "!src/registerServiceWorker.js",
      "!version.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": ["prettier --single-quote --write", "git add"]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "react-scripts": "1.1.1",
    "react-test-renderer": "^16.2.0"
  },
  "dependencies": {
    "@orbit/core": "^0.15.10",
    "@orbit/data": "^0.15.10",
    "@orbit/store": "^0.15.10",
    "classnames": "^2.2.5",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-color": "^2.14.0",
    "react-dom": "^16.2.0",
    "react-orbitjs": "^0.1.6"
  },
  "scripts": {
    "start": "npm run copy-version && npm-run-all -p watch-css start-js",
    "precommit": "lint-staged",
    "copy-version": "node version.js",
    "build": "npm run build-css && npm run copy-version && react-scripts build",
    "coverage": "npm test -- --coverage",
    "test":
      "npm run build-css && npm run copy-version && react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css":
      "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start"
  }
}
